@model IEnumerable<_24NEWSMVC.ViewModels.ArticleViewModel>
@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


 <div class="addAritcles">
        <h1 class="page-header" style="text-align: center;">Articles</h1>
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-9 col-sm-offset-3 col-md-7 col-md-offset-2 main formContainer"
                    style="margin-left: 380px;">


                    <a asp-controller="Admin" asp-action="createarticle" class="btn btn-success"><i class="fa fa-plus-circle"></i></a>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="articlesTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Author</th>              
                                    <th>Image</th>
                                    <th>Creation Date</th>
                                    <th>Publication Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @{
                                int counter = 1;
                                foreach (var item in Model) {
                                <tr>
                                    <td>@counter</td>
                                    <td><textarea rows="1" cols="30"
                                            disabled>@item.Title</textarea>
                                    </td>
                                    <td>@item.AuthorName</td>                               
                                    <td>
                                        <a asp-controller="Admin" asp-action="getarticleimgbyid" asp-route-id="@item.Id" target="_blank" class="btn btn-xs btn-info">
                                            <i class="fa fa-image"></i>
                                        </a>
                                    </td>
                                    <td>@item.CreationDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.PublicationDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="editarticle" asp-route-id="@item.Id" class="btn btn-xs btn-default btn-primary">
                                            <i class="fa fa-edit"></i>
                                            Edit
                                        </a>
                                        <a asp-controller="Admin" asp-action="viewarticle" asp-route-id="@item.Id" class="btn btn-xs btn-default btn-info">
                                            <i class="fa fa-eye"></i>
                                            View
                                        </a>
                                        <a asp-controller="Admin" asp-action="deletearticle" asp-route-id="@item.Id"
                                        class="btn btn-xs btn-default btn-danger"
                                          onclick="return confirm('Are you sure you want to delete this Article ?')">
                                            <i class="fa fa-trash"></i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>

                                 counter++;
                                }
                              }
                            </tbody>
                               
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

