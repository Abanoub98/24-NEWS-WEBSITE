@model _24NEWSMVC.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "ViewAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="singleAuthor">
        <h1 class="page-header" style="text-align: center;">@Model.Name</h1>
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-9 col-sm-offset-3 col-md-8 col-md-offset-2 main formContainer"
                    style="margin-left: 400px;">

                    <form class="form-horizontal">
                   
                        <div class="form-group">
                            <label  class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control"  value="@Model.Email" placeholder="Email" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <label >Bio</label>
                                <textarea  class="form-control" rows="10" style="resize: none;" disabled >@Model.Bio</textarea>
                                <p class="help-block"> a Short Bio about the Author</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <a asp-controller="Admin" asp-action="author"  class="btn btn-danger"
                                    style="color: white; text-decoration: none;">Cancel</a>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

