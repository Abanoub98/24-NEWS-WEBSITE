@model _24NEWSMVC.ViewModels.ArticleViewModel
@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 <div class="container-fluid" style="margin-bottom:150px">
        <div class="row">

            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main formContainer"
                style="margin-left: 170px;">
                <h1 class="page-header" style="text-align: center;">Add Article</h1>

               
                <form class="form-horizontal" asp-controller="Admin" asp-action="CreateArticle" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input type="text" class="form-control"  asp-for="Title" placeholder="Title" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-7 col-md-9">
                            <div class="form-group formTextArea">
                                <textarea id="content" style="height: 685px;" asp-for="ArticleBody" required></textarea>
                                <span asp-validation-for="ArticleBody" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-5 col-md-3">
                            <div class="form-group">
                                <label asp-for="PublicationDate">Publication Date</label>
                                <input type="date"  min="@DateTime.Today.ToString("yyyy-MM-dd")"    class="form-control" asp-for="PublicationDate" required>
                               <span asp-validation-for="PublicationDate" class="text-danger"></span>
                        
                            </div>
                            <div class="form-group">
                                <label for="authors_id">Author</label>
                                <a asp-controller="Admin" asp-action="createauthor" style="color: rgb(0, 202, 0);"><i
                                        class="fa fa-plus-circle"></i></a>

                                <select asp-for="AuthorID" class="form-control" required>
                                    @foreach (var pair in Model.Authors)
                                    {
                                         <option value="@pair.Key">@pair.Value</option>
                                    }
                                   
                                </select>
                                <span asp-validation-for="AuthorID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BlockQoute">Block Qoute</label>
                                <textarea name="blockqoute" asp-for="BlockQoute" class="form-control" rows="2"
                                    style="resize: vertical;"></textarea>
                                <p class="help-block">Write the Block Qoute of the Article (if exist)</p>
                                <span asp-validation-for="BlockQoute" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="imgFile">Image</label>
                                <input type="file"  asp-for="imgFile" class="form-control" required
                                    onchange="readURL(this);" />
                                 <span asp-validation-for="imgFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">

                                <a class="thumbnail">
                                    <img src="~/images/role photo.jpg" id="artPrev" alt="Article Image" height="300"
                                        width="370">
                                    <p class="help-block">Article Image Preview</p>
                                </a>
                            </div>
                            <div class="form-group">
                                <a asp-controller="Admin" asp-action="articles" class="btn btn-danger"
                                    style="color: white; text-decoration: none;">Cancel</a>
                                <button type="submit" class="btn btn-primary">Publish</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
