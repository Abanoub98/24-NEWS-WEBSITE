@model _24NEWSMVC.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "EditAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="addAuthor">
        <h1 class="page-header" style="text-align: center;">Edit Author</h1>
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-9 col-sm-offset-3 col-md-8 col-md-offset-2 main formContainer"
                    style="margin-left: 400px;">

                    <form class="form-horizontal" asp-controller="Admin" asp-action="EditAuthor">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Name" value="@Model.Name" placeholder="Name" required>
                            </div>
                              <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" asp-for="Email" value="@Model.Email" placeholder="Email" required>
                            </div>
                              <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <label asp-for="Bio">Bio</label>
                                <textarea asp-for="Bio" class="form-control" rows="10" style="resize: none;">@Model.Bio</textarea>
                                <p class="help-block">Write a Short Bio about the Author</p>
                                  <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <a asp-controller="Admin" asp-action="author" class="btn btn-danger"
                                    style="color: white; text-decoration: none;">Cancel</a>
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

