@model IEnumerable<_24NEWSMVC.ViewModels.ArticleViewModel>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="container-fluid pb-4 pt-4 paddding">
        <div class="container paddding">
            <div class="row mx-0">
                <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                    <div>
                        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
                    </div>
                @if (Model.Count() != 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="row pb-4">
                            <div class="col-md-5">
                                <a asp-controller="Home" asp-action="articleinfo" asp-route-id="@item.Id">
                                <div class="fh5co_hover_news_img">
                                    <div class="fh5co_news_img"><img src="/getarticleimgbyid/@item.Id" alt="" /></div>
                                    <div></div>
                                </div>
                                </a>
                            </div>
                            <div class="col-md-7 animate-box">
                                <a asp-controller="Home" asp-action="articleinfo" asp-route-id="@item.Id" class="fh5co_magna py-2"> @item.Title </a> 
                                <br>
                                <a asp-controller="Home" asp-action="articleinfo" asp-route-id="@item.Id" class="fh5co_mini_time py-3"> @item.AuthorName - @item.PublicationDate.ToString("MMMM dd,yyyy") </a>
                                <div class="fh5co_consectetur"> @item.ArticleBody
                                </div>
                            </div>
                        </div>
                    }
                }

 
                </div>
                <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
                    <div>
                        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tags</div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="fh5co_tags_all">
                        <a class="fh5co_tagg">Business</a>
                        <a class="fh5co_tagg">Technology</a>
                        <a class="fh5co_tagg">Sport</a>
                        <a class="fh5co_tagg">Art</a>
                        <a class="fh5co_tagg">Lifestyle</a>
                        <a class="fh5co_tagg">Three</a>
                        <a class="fh5co_tagg">Photography</a>
                        <a class="fh5co_tagg">Lifestyle</a>
                        <a class="fh5co_tagg">Art</a>
                        <a class="fh5co_tagg">Education</a>
                        <a class="fh5co_tagg">Social</a>
                        <a class="fh5co_tagg">Three</a>
                    </div>
                    <div>
                        <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Most Popular</div>
                        <div class="col-lg5">
                            <img src="images/latest-news-icon.png" height="300" width="300" alt="">
                        </div>
                    </div>

                </div>
            </div>
            <div class="row mx-0 animate-box" data-animate-effect="fadeInUp">
                <div class="col-12 text-center pb-4 pt-4 lnIt">
                    <a href="#" class="btn_mange_pagging"><i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp; Previous</a>
                    <a href="#" class="btn_pagging">1</a>
                    <a href="#" class="btn_pagging">2</a>
                    <a href="#" class="btn_pagging">3</a>
                    <a href="#" class="btn_pagging">...</a>
                    <a href="#" class="btn_mange_pagging">Next <i class="fa fa-long-arrow-right"></i>&nbsp;&nbsp; </a>
                </div>
            </div>
        </div>
    </div>